<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="vbox" stylesheets="@css/gameOver.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewmodel.GameOverController">

    <children>
        <!-- Title -->
        <Label fx:id="titleLabel" contentDisplay="CENTER" layoutX="250.0" layoutY="50" text="GAME OVER" VBox.vgrow="NEVER">
            <VBox.margin>
                <Insets top="65.0" />
            </VBox.margin>
            <font>
                <Font size="50.0" />
            </font></Label>
        <Label fx:id="winnerLabel" text="Winner:">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="20.0" />
            </padding></Label>
        <Label fx:id="playerNameLabel" text="playerName" />
        <ImageView fx:id="robotImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </ImageView>
    </children>

</VBox>
