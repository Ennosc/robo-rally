<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="chatRoot" prefHeight="320" prefWidth="400" stylesheets="@css/chatView.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewmodel.ChatViewController">
    <children>
        <ScrollPane fx:id="sp_main" fitToWidth="true" pannable="true" prefHeight="256" prefWidth="418">
            <content>
                <VBox fx:id="vbox_messages" prefHeight="241.0" prefWidth="392.0" />
            </content>
        </ScrollPane>
        <HBox alignment="CENTER" prefHeight="124.0" prefWidth="396.0" spacing="10">
            <children>
                <ComboBox fx:id="comboBox_users" prefHeight="33.0" prefWidth="90.0" promptText="Select" />
                <TextField fx:id="tf_message" prefHeight="33.0" prefWidth="180.0" />
                <Button fx:id="button_send" prefHeight="33.0" prefWidth="55.0" text="Send" />
            </children>
        </HBox>
    </children>
</VBox>
